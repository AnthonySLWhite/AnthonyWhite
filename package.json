{
  "name": "DevEnv-Node",
  "version": "1.0.0",
  "description": "Base files for new Node project!",
  "scripts": {
    "heroku-prebuild": "npm-run-all parcel:build",
    "prepack": "npm-run-all parcel:build",
    "start": "npm-run-all nodemon-prod",
    "NODE-BACKEND": "COMENTARY------------------------------------------------------------------------------------------------------",
    "codeN": "npm-run-all --parallel parcel nodemon-dev",
    "codeN:build": "npm-run-all --sequential parcel:build nodemon-prod",
    "buildN": "npm-run-all --sequential parcel:build",
    "DOM-FRONTEND": "COMENTARY------------------------------------------------------------------------------------------------------",
    "codeF": "npm-run-all --parallel nodemon-frontend sass parcel-frontend",
    "codeF:build": "npm-run-all --sequential sass:build prefixer parcel-frontend:build codeN:build",
    "buildF": "npm-run-all --sequential sass:build prefixer parcel-frontend:build",
    "NODE-SCRIPTS": "COMENTARY------------------------------------------------------------------------------------------------------",
    "nodemon-dev": "cross-env NODE_ENV=development nodemon dist/app.js",
    "nodemon-prod": "cross-env NODE_ENV=production nodemon prod/app.js",
    "debug": "nodemon --inspect-brk ./dist/app.js",
    "SERVER-SCRIPTS": "COMENTARY------------------------------------------------------------------------------------------------------",
    "nodemon-frontend": "cross-env NODE_ENV=production FrontEnd=true nodemon prod/app.js",
    "DOM-SCRIPTS": "COMENTARY------------------------------------------------------------------------------------------------------",
    "sass": "npm-run-all --sequential sass:build sass:watch",
    "sass:watch": "node-sass --watch -r --include-path \"public/src/assets/css\" -o \"public/src/assets/css\" --source-map true \"public/src/assets/css/\"",
    "sass:build": "node-sass -o \"public/src/assets/css\" --source-map true \"public/src/assets/css\"",
    "prefixer": "postcss -r --config postcss.build.config.js \"public/src/assets/css/style.css\" ",
    "BUILD-SCRIPTS": "COMENTARY------------------------------------------------------------------------------------------------------",
    "parcel": "parcel watch src/app.js --public-url ./ --target node",
    "parcel:build": "parcel build src/app.js --public-url ./ --out-dir prod --target node",
    "parcel-frontend": "cross-env NODE_ENV=development parcel watch public/src/index.html --out-dir public/dist --target browser",
    "parcel-frontend:build": "cross-env NODE_ENV=production parcel build public/src/index.html --out-dir public/prod --target browser",
    "OTHERS": "COMENTARY------------------------------------------------------------------------------------------------------",
    "comingSoon": "cross-env NODE_ENV=development parcel build comingSoon/src/index.html --out-dir comingSoon/prod --target browser"
  },
  "author": "Anthony White",
  "license": "",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "hbs": "^4.0.1",
    "nodemon": "^1.18.6",
    "npm-run-all": "^3.1.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-core": "6.17.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "6.24.1",
    "browser-sync": "2.23.7",
    "cross-env": "^5.2.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-google": "0.9.1",
    "eslint-config-problems": "0.1.1",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-import": "^2.12.0",
    "localtunnel": "^1.9.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.10.0",
    "nsp": "2.6.2",
    "parcel-bundler": "^1.10.3",
    "postcss": "^6.0.23",
    "postcss-cli": "^5.0.1"
  }
}
